{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./public",
        "target": "es6",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "allowJs": true,
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strictPropertyInitialization": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "lib": [
            "es6",
            "es7",
            "dom"
        ],
        "paths": {
            "@src/": ["src/*"],
            "@components/*": ["src/client/shared/components/*"],
            "@helpers/*": ["src/client/shared/helpers/*"],
            "@typings/*": ["src/client/shared/typings/*"]
        }
    },
    "files": [
        "src/client/global.d.ts"
    ],
    "include": [
        "src/client/**/*.ts",
        "src/client/**/*.vue"
    ],
    "exclude": [
        "node_modules",
        "docs",
        "public",
        "src/client/pages/code-examples/01/*.vue"
    ]
}
