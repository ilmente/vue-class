{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./public",
        "target": "es6",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "allowJs": true,
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strictPropertyInitialization": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "lib": [
            "es6",
            "es7",
            "dom"
        ],
        "paths": {
            "src/": ["src/*"],
            "components/*": ["src/client/components/*"],
            "helpers/*": ["src/client/helpers/*"],
            "decorators/*": ["src/client/decorators/*"],
            "typings/*": ["src/client/typings/*"]
        }
    },
    "files": [
        "src/client/global.d.ts",
        "src/client/shim.d.ts"
    ],
    "include": [
        "src/client/**/*.ts",
        "src/client/**/*.vue"
    ],
    "exclude": [
        ".vscode",
        "node_modules",
        "docs",
        "public",
        "assets",
        "netlify",
        "src/client/apps/code/01/*.vue"
    ]
}
